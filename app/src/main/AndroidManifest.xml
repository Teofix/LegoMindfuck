<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adev.android.legomindfuck">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".Activity.MotorActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.TowerActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.EndGameActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.MainMenuActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.PlayMenuActivity"
            android:parentActivityName=".Activity.MainMenuActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".Activity.MultiplayerSelectionActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.MultiMotorActivityP1"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Activity.MultiMotorActivityP2"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Activity.ConnectionTestActivity"
            android:parentActivityName=".Activity.MainMenuActivity"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Activity.SegnalazioniActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>