<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/mGreen"
        android:fontFamily="@font/fjalla_one"
        android:gravity="center_vertical"
        android:text="@string/end_game"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/round_background_red"
        android:fontFamily="@font/fjalla_one"
        android:gravity="center"
        android:text="HAI PERSO"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:fontFamily="@font/fjalla_one"
        android:gravity="right|center_vertical"
        android:text="TIME :"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/timeText"
        app:layout_constraintEnd_toStartOf="@+id/timeText"
        app:layout_constraintTop_toTopOf="@+id/timeText"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/timeText"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/fjalla_one"
        android:gravity="left|clip_vertical|clip_horizontal"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textColor="@color/mColorBlack"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeText">

        <TableRow>

            <TextView
                android:id="@+id/idnome"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="NOME"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idnumeroclick"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="# CLICK"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idtempoclick"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="TEMPO CLICK(ms)"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/motor1_left"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/rotation"
                    android:scaleX="-1" />

                <TextView
                    android:id="@+id/textViewBaseDX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/fjalla_one"
                    android:gravity="center"
                    android:text="BASE"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numeroclickbasedx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tempoclickbasedx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />


        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/motor1_right"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/rotation" />

                <TextView
                    android:id="@+id/textViewBaseSX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/fjalla_one"
                    android:gravity="center"
                    android:text="BASE"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numeroclickbasesx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tempoclickbasesx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />


        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView_motor2_left"
                    android:layout_width="31dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/arrow" />

                <TextView
                    android:id="@+id/textViewBraccioDX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/fjalla_one"
                    android:gravity="center"
                    android:text="BRACCIO"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numeroclickbracciodx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tempoclickbracciodx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView_motor2_right"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/arrow"
                    android:scaleX="-1" />

                <TextView
                    android:id="@+id/textViewBraccioSX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/fjalla_one"
                    android:gravity="center"
                    android:text="BRACCIO"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numeroclickbracciosx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tempoclickbracciosx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView_motor3_left"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/arrow" />

                <TextView
                    android:id="@+id/textViewManoDX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/fjalla_one"
                    android:gravity="center"
                    android:text="MANO"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numeroclickmanodx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tempoclickmanodx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView_motor3_right"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/arrow"
                    android:scaleX="-1" />

                <TextView
                    android:id="@+id/textViewManoSX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/fjalla_one"
                    android:gravity="center"
                    android:text="MANO"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/numeroclickmanosx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tempoclickmanosx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/fjalla_one"
                android:gravity="center"
                android:text="00"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>