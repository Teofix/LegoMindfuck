<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- ....... Base ........ -->


    <!-- ....... Braccio ........ -->


    <!-- ....... Mano ........ -->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/sliderBack"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Controllo motori - Player 2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/motor3_left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/textView4"
        android:background="@drawable/round_button"
        android:rotation="-90"
        android:src="@drawable/arrow_left" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Mano"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/motor3_right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/textView4"
        android:background="@drawable/round_button"
        android:rotation="-90"
        android:src="@drawable/arrow_right" />


    <!-- ....... VelocitÃ  ........ -->

    <Switch
        android:id="@+id/speed_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/put_down_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:checked="false" />

    <Button
        android:id="@+id/pick_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:text="Pick up" />

    <Button
        android:id="@+id/put_down_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:text="Put Down" />

</RelativeLayout>